  // ESLint configuration for flat config (modern ESLint)
  "eslint.useFlatConfig": true,
  "eslint.workingDirectories": ["frontend", "server", "collector"],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // Prettier configuration
  "prettier.configPath": "./.prettierrc",
  "prettier.requireConfig": true,

  // Package manager settings for yarn 4.9.2
  "npm.packageManager": "yarn",
  "node.packageManager": "yarn",
  "corepack.enabled": true,

  // Editor settings
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },

  // TypeScript/JavaScript settings
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "javascript.preferences.includePackageJsonAutoImports": "on",
  "typescript.suggest.autoImports": true,
  "javascript.suggest.autoImports": true,

  // React/JSX settings
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },

  // TailwindCSS settings
  "tailwindCSS.includeLanguages": {
    "javascript": "javascript",
    "html": "html"
  },
  "tailwindCSS.experimental.classRegex": [
    ["clsx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    ["className:\\s*['\"]([^'\"]*)['\"]", "([a-zA-Z0-9\\-:]+)"]
  ],

  // File associations
  "files.associations": {
    "*.env*": "dotenv",
    "*.env.example": "properties",
    "*.env.development": "properties",
    "*.env.production": "properties",
    "Dockerfile*": "dockerfile",
    "*.md": "markdown",
    "*.prisma": "prisma"
  },

  // File exclusions for better performance
  "files.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/.git": true,
    "**/.DS_Store": true,
    "**/coverage": true,
    "server/storage/**": true,
    "server/prisma/migrations": false
  },

  // Search exclusions
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/coverage": true,
    "**/*.min.js": true,
    "server/storage/**": true
  },

  // Terminal settings
  "terminal.integrated.defaultProfile.linux": null,
  "terminal.integrated.cwd": "/workspaces/anything-llm",

  // Git settings
  "git.openRepositoryInParentFolders": "always",
  "git.autofetch": true,
  "git.enableSmartCommit": true,

  // Debug settings
  "debug.openDebug": "openOnDebugBreak",

  // Docker settings
  "docker.languageserver.formatter.ignoreMultilineInstructions": true,

  // Language-specific formatters
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrap": "on"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "jdk.advanced.disable.nbjavac": false
}
